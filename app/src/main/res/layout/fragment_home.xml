<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_record"
        android:src="@drawable/ic_action_add_photo_alternate" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:background="#00ff0000"
        android:scaleType="fitCenter"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="130dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:hint="Your Nickname"
        android:paddingTop="9dp" />

    <ImageButton
        android:id="@+id/btn_nickname"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:src="@drawable/ic_edit"
        android:background="#00ff0000"
        android:scaleType="center"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <View
        android:id="@+id/divider_first"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="110dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider_second"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="210dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider_third"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="260dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider_fourth"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="710dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tv_diary_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="[ 오늘의 Make It! ]" />

    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="355dp"
        android:layout_marginTop="277dp"
        android:background="#00ff0000"
        android:src="@drawable/ic_action_add"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/iv_now"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="335dp"
        android:background="@drawable/btn_record"
        android:src="@drawable/ic_action_image"
        android:scaleType="center"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_now"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="335dp"
        android:background="#00ff0000"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_title_now"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="335dp"
        android:background="@drawable/btn_record"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:hint="Title"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_today_now"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/btn_record"
        android:textSize="13dp"
        android:text="Today"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_weather_now"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/btn_record"
        android:textSize="13dp"
        android:text="Weather"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_mood_now"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/btn_record"
        android:textSize="13dp"
        android:text="Mood"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_today_now_me"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/btn_record"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:hint="Today"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_weather_now_me"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/btn_record"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:hint="Weather"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_mood_now_me"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/btn_record"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:hint="Mood"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_diary_now_me"
        android:layout_width="390dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="525dp"
        android:background="@drawable/btn_record"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:hint="Keep a diary"
        tools:ignore="SpeakableTextPresentCheck" />



</FrameLayout>